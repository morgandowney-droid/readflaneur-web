{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-guides",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/generate-opening-closing-news",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/sync-tonight",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/sync-spotted",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/process-property-watch",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/generate-digests",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/sync-news",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/generate-guide-digests",
      "schedule": "0 10 * * 1"
    },
    {
      "path": "/api/cron/generate-community-news",
      "schedule": "0 11 * * 6"
    },
    {
      "path": "/api/cron/sync-neighborhood-briefs",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/enrich-briefs",
      "schedule": "15 * * * *"
    },
    {
      "path": "/api/cron/generate-brief-articles",
      "schedule": "30 * * * *"
    }
  ]
}
